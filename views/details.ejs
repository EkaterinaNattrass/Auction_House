<%- include('partials/head')%>
<body>
  <header><%- include('partials/nav')%></header>
  <main>
    <div class="container p-3">
      <div class="row justify-content-around">
          <div class="col-lg-4 mt-5">
            <div class="card p-2">
              <div class="card-header"><img src="<%= listing.media[0] %>" class="rounded-circle p-2" style="width: 50px; height: 50px;"  alt="avatar"/> Profile name</div>
              <ul class="list-group list-group-flush">
                <li class="list-group-item"> credits </li>
                <li class="list-group-item"> wins(?)</li>
              </ul>
            </div>
          </div>
          <div class="col-lg-6 mt-5">
          <div class="card mb-3 p-2" style="max-width: 600px">
            <div class="row g-0">
              <div id="carousel" class="carousel slide">
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img
                      src="<%= listing.media[0] %>"
                      class="d-block w-100"
                      alt="listing"
                    />
                  </div>
                  <div class="carousel-item">
                    <img
                      src="images/steve-johnson-3Sf_G9m0gcQ-unsplash.jpg"
                      class="d-block w-100"
                      alt="listing"
                    />
                  </div>
                  <div class="carousel-item">
                    <img src="" class="d-block w-100" alt="listing" />
                  </div>
                </div>
                <button
                  class="carousel-control-prev"
                  type="button"
                  data-bs-target="#carousel"
                  data-bs-slide="prev"
                >
                  <span
                    class="carousel-control-prev-icon"
                    aria-hidden="true"
                  ></span>
                  <span class="visually-hidden">Previous</span>
                </button>
                <button
                  class="carousel-control-next"
                  type="button"
                  data-bs-target="#carousel"
                  data-bs-slide="next"
                >
                  <span
                    class="carousel-control-next-icon"
                    aria-hidden="true"
                  ></span>
                  <span class="visually-hidden">Next</span>
                </button>
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title"><%= listing.title %></h5>
                  <p class="card-text"><%= listing.description %></p>
                  <p class="card-text">
                    <small class="text-body-secondary"
                      >Ends: <%= listing.endsAt %></small
                    >
                  </p>
                  <p class="card-text">
                    <small class="text-body-secondary"
                      >current bid <%= listing._count.bid %></small
                    >
                  </p>
                </div>
              </div>
              <form class="row g-3">
                <div class="col-auto">
                  <label for="bid" class="visually-hidden">YOUR BID</label>
                  <input
                    type="text"
                    class="form-control"
                    id="bid"
                    placeholder="YOUR BID"
                  />
                </div>
                <div class="col-auto">
                  <button type="submit" class="btn btn-primary mb-3">
                    CONFIRM YOUR BID
                  </button>
                </div>
              </form>
              <div class="g-3 mb-3"><a href="/listings" class="btn btn-outline-primary mt-4"
                >BACK TO THE LISTINGS</a
              ></div>
            </div>
          </div>
          </div>
        </div>
      </div>
  </main>
  <%- include('partials/footer')%>
</body>
</html>
