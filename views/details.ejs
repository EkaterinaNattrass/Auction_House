<%- include('partials/head')%>
<body>
  <header><%- include('partials/nav')%></header>
  <main>
    <div class="container p-3">
      <div class="row justify-content-around">
        <div><div class="col-lg-4">
          <div class="card mt-5 mb-5 p-2">
            <div class="card-header">
              <img
                src="images/alexander-schimmeck-CCJGadKQXxI-unsplash.jpg"
                class="rounded-circle p-2"
                style="width: 50px; height: 50px"
                alt="avatar"
              />Profile name
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">credits</li>
              <li class="list-group-item">wins(?)</li>
            </ul>
          </div>
        </div>
        <div class="listing-container col-lg-6 p-5">
          <div class="row">
            <div class="col-lg-4">
              <div id="carousel" class="carousel slide">
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img
                      src="<%= listing.media[0] %>"
                      class="d-block w-100"
                      alt="listing"
                    />
                  </div>
                  <div class="carousel-item">
                    <img
                      src="images/steve-johnson-3Sf_G9m0gcQ-unsplash.jpg"
                      class="d-block w-100"
                      alt="listing"
                    />
                  </div>
                  <div class="carousel-item">
                    <img src="" class="d-block w-100" alt="listing" />
                  </div>
                </div>
                <button
                  class="carousel-control-prev"
                  type="button"
                  data-bs-target="#carousel"
                  data-bs-slide="prev"
                >
                  <span
                    class="carousel-control-prev-icon"
                    aria-hidden="true"
                  ></span>
                  <span class="visually-hidden">Previous</span>
                </button>
                <button
                  class="carousel-control-next"
                  type="button"
                  data-bs-target="#carousel"
                  data-bs-slide="next"
                >
                  <span
                    class="carousel-control-next-icon"
                    aria-hidden="true"
                  ></span>
                  <span class="visually-hidden">Next</span>
                </button>
              </div>
            </div>
            <div class="col-lg-5">
              <h1><%= listing.title %></h1>
              <h2>current bid <%= listing._count.bid %></h2>
              <h3>Ends: <%= listing.endsAt %></h3>
              <div><%= listing.description %></div>
              <form class="row g-3">
                <div class="col-auto">
                  <label for="bid" class="visually-hidden">YOUR BID</label>
                  <input
                    type="text"
                    class="form-control"
                    id="bid"
                    placeholder="YOUR BID"
                  />
                </div>
                <div class="col-auto">
                  <button type="submit" class="btn btn-primary mb-3">
                    CONFIRM YOUR BID
                  </button>
                </div>
              </form>
  
              <a href="/listings" class="btn btn-outline-primary mt-4"
                >BACK TO THE LISTINGS</a
              >
            </div>
          </div>
        </div>
        </div>
      </div>

      
    </div>
  </main>
  <%- include('partials/footer')%>
</body>
</html>
