<%- include('partials/head')%>
<body>
  <header><%- include('partials/nav-loggedin')%></header>
  <main>
    <div class="container">
      <div class="row">
        <div class="col-lg-4 mt-5">
          <form
            action="/listings/<%= listing.id %>?_method=PUT"
            method="POST"
            novalidate
            class="validated-form"
          >
            <div class="my-3">
              <label for="title" class="form-label">Title</label>
              <textarea
                class="form-control"
                id="title"
                name="title"
                aria-label="title of a new listing"
                rows="1"
                required
              >
              <%= listing.title %></textarea
              >
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="my-3">
              <label for="description" class="form-label">Description</label>
              <textarea
                class="form-control"
                id="description"
                name="description"
                aria-label="description of a new listing"
                rows="3"
                required
              >
              <%= listing.description %></textarea
              >
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="my-3">
              <label for="endsAt" class="form-label">Deadline</label>
              <input class="form-control"
                type="text"
                id="endsAt"
                name="endsAt"
                value="<%= listing.endsAt %>"
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="my-3">
              <label for="media" class="form-label">Media</label>
              <input
                type="text"
                class="form-control mb-2"
                id="media1"
                name="media"
                aria-label="image of a new listing"
                value="<%= listing.media[0] %>"
              />
              <input
                type="text"
                class="form-control mb-2"
                id="media2"
                name="media"
                aria-label="image of a new listing"
                value="<%= listing.media[1] %>"
              />
              <input
                type="text"
                class="form-control mb-2"
                id="media3"
                name="media"
                aria-label="image of a new listing"
                value="<%= listing.media[2] %>"
              />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="d-grid gap-2">
              <input type="submit" class="btn btn-primary" value="UPDATE" />
            </div>
          </form>
        </div>
        <% if (failedListingUpdateMessage.length > 0) { %>
          <div class="error-message text-center">
            <% failedListingUpdateMessage.forEach(message => { %>
            <p><i class="fa-solid fa-triangle-exclamation"></i> <%= message %></p>
            <% }); %>
          </div>
          <% } %>
      </div>
      </div>
    </div>
  </main>
  <%- include('partials/footer')%>
</body>
</html>