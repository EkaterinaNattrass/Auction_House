<%- include('partials/head')%>
<body>
  <header><%- include('partials/nav')%></header>
  <main>
    <div class="container">
      <div class="row justify-content-around d-flex align-items-center">
        <div class="col-lg-4 col-sm-8 text-center">
          <div>
            <img src="images/Logo.png" alt="logo of the Auction House" class="auction-logo" />
          </div>
          <div class="mt-3 logo-text">
            BID BOLDLY <br />
            WIN BEAUTIFULLY <br />
            YOUR TREASURES AWAIT!
          </div>
        </div>
        <div class="col-lg-4 col-sm-8 my-5">
          <% if ( successMessage.length > 0) { %>
            <div class="alert alert-warning d-flex align-items-center justify-content-around">
                <% successMessage.forEach ( message => { %>
                    <p>
                      <i class="fa-solid fa-circle-check"></i> <%= successMessage %></div>
                    </p>
                    <% }); %>
            </div>
            <% } %>
          <% if ( failedLoginMessage.length > 0) { %>
            <div class="alert alert-warning d-flex align-items-center justify-content-around">
                <% failedLoginMessage.forEach ( message => { %>
                    <p>
                      <i class="fa-solid fa-triangle-exclamation"></i>  <%= message %>
                    </p>
                    <% }); %>
            </div>
            <% } %>
          <form action="/login-form" method="POST" id="login-form">
            <div class="mb-3">
              <label for="email" class="form-label"
                >Email address</label
              >
              <input
                type="email"
                class="form-control"
                id="email"
                name="email"
                aria-label="email"
                required
              />
            </div>
            <div class="mb-3">
              <label for="password" class="form-label"
                >Password</label
              >
              <input
                type="password"
                class="form-control"
                id="password"
                name="password"
                aria-label="password"
                required
              />
            </div>
            <div class="d-grid gap-2">
              <input type="submit" class="btn btn-primary mt-4" value='LOG IN'>
            </div>
          </form>
          <div class="white-text mt-3">
            Not registered? <a href="/register-form">Create an account</a>
          </div>
          <div class="d-grid gap-2 my-5">
            <a href="/listings" class="btn btn-primary mt-4">BROWSE</a>
          </div>
        </div>
      </div>
    </div>
  </main>
  <%- include('partials/footer')%>
</body>
</html>
