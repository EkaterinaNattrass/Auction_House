<%- include('partials/head')%>
<body>
  <header><%- include('partials/nav-loggedin')%></header>
  <main>
    <div class="container-fluid">
      <div class="row justify-content-around p-3">
        <div class="col-lg-3 mt-5 p-2">
          <form class="form-inline" action="/listings-loggedin/search" method="GET">
            <input
              class="form-control mr-sm-2"
              type="search"
              placeholder="SEARCH..."
              aria-label="Search"
              name="search"
              id="search"
            />
          </form>
          <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
              Filter
            </button>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/listings-loggedin">All the listings</a></li>
              <li><a class="dropdown-item" href="/listings-loggedin/art">Art</a></li>
              <li><a class="dropdown-item" href="/listings-loggedin/books">Books</a></li>
              <li><a class="dropdown-item" href="/listings-loggedin/furniture">Furniture</a></li>
              <li><a class="dropdown-item" href="/listings-loggedin/jewellery">Jewellery</a></li>
              
            </ul>
          </div>
          <div class="card mt-5 p-2">
            <h5 class="card-header">
              <% if (profile.avatar) { %>
                <img
                src="<%= profile.avatar %>"
                class="rounded-circle p-2"
                style="width: 70px; height: 70px"
                alt="avatar"
              /> 
             <% } %>
              <a href="/profile"><%= profile.name.toUpperCase() %></a> 
              </h5>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">You have <%= profile.credits %> credits</li>
            </ul>
          </div>
          <div class="card mt-5 p-2">
            <div class="card-header">OUR CONTACTS</div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">Ole Nordman, Associate Specialist</li>
              <li class="list-group-item">+47 0000000</li>
              <li class="list-group-item">olenordman0000@mail.no</li>
            </ul>
          </div>
          <div class="card mt-5 p-2">
            <div class="card-header">NEWSLETTER</div>
            <div class="card-body">
              <p class="card-text">
                Subscribe to our newsletter and receive exclusive content about
                our auctions and special events
              </p>
              <form action="">
                <div class="mb-3">
                  <label for="exampleInputEmail1" class="form-label"
                    >Email address</label
                  >
                  <input
                    type="email"
                    class="form-control"
                    id="exampleInputEmail1"
                    aria-describedby="emailHelp"
                  />
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
            </div>
          </div>
        </div>
        <div class="col-lg-9 mt-5 p-2 ">
          <div class="row justify-content-around">
            <% for (let filteredListing of filteredListings) { %>
            <div class="card mb-5 shadow" style="width: 20rem">
              <a href="/listings/<%= filteredListing.id %>"
                ><img
                  src="<%= filteredListing.media %>"
                  class="card-img-top mt-2"
                  alt="image of the listing"
              /></a>
              <div class="card-body">
                <h5 class="card-title"><%= filteredListing.title %></h5>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item">
                    CURRENT BID <%= filteredListing._count.bids %>
                  </li>
                  <li class="list-group-item">ENDS: <%= filteredListing.endsAt %></li>
                </ul>
              </div>
            </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </main>
  <%- include('partials/footer')%>
</body>
</html>